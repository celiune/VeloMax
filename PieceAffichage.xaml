<Window x:Class="VELOMAX.PieceAffichage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        
        xmlns:local="clr-namespace:VELOMAX"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        AllowsTransparency="True">
    <Grid Cursor="Hand">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <fa:IconImage Icon="Dharmachakra" Style="{StaticResource titleIcon}" Foreground="#FF6C3579" />
            <TextBlock Text="Pièces détachées" Style="{StaticResource titleText}" Foreground="#FF6C3579"/>
        </StackPanel>
        <Button x:Name="Fermeture" Content="X" Background="Red" VerticalAlignment="Top" HorizontalAlignment="Right" BorderBrush="Transparent" Click="Fermeture_Click" Cursor="Hand"/>
        <DataGrid x:Name="PiecesDatagrid" Margin="0,85,0,0" Height="365" VerticalAlignment="Top" HorizontalAlignment="Left" Width="800" ItemsSource="{Binding}"/>
    </Grid>
</Window>
